{
  "name": "git-hooks-list",
  "version": "1.0.2",
  "description": "List of Git hooks",
  "keywords": [
    "git",
    "hooks",
    "list"
  ],
  "repository": "git@github.com:fisker/git-hooks-list.git",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [
    "index.json"
  ],
  "sideEffects": false,
  "main": "index.json",
  "jsdelivr": "index.json",
  "unpkg": "index.json",
  "browser": "index.json",
  "scripts": {
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint test format dist",
    "test": "node test.js",
    "update": "node -r esm scripts/update.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.4",
    "@fisker/commitlint-config": "1.1.4",
    "@fisker/eslint-config": "1.6.0",
    "@fisker/husky-config": "1.1.5",
    "@fisker/lint-staged-config": "1.0.8",
    "@fisker/prettier-config": "1.0.24",
    "cheerio": "1.0.0-rc.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.8.0",
    "eslint-config-fisker": "4.5.0",
    "esm": "3.2.25",
    "got": "10.2.1",
    "husky": "4.0.0",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.21.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "sort-package-json": "1.37.0",
    "write-prettier-file": "1.2.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
